// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String
  name          String
  surname       String
  password      String
  profile_image String?
  booking       Booking[]
}

model Mentor {
  id                  Int       @id @default(autoincrement())
  email               String
  name                String
  surname             String
  password            String
  profile_image       String
  profile_description String
  bookbank_image      String
  citizenId           String
  citizen_image       String
  telephone_number    String
  bookbank_number     String
  is_active           Boolean   @default(false)
  price_rate          Int       @default(250)
  date_time_booking   String
  booking             Booking[]
}

model Booking {
  id              Int     @id @default(autoincrement())
  id_user         Int
  id_mentor       Int
  url_conference  String?
  payment_img     String
  date_booking    String
  time_booking    String
  user_booking    User    @relation(fields: [id_user], references: [id])
  mentor_booking  Mentor  @relation(fields: [id_mentor], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String
  password String
}
